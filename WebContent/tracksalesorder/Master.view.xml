<core:View
	controllerName="com.sndk.poc.tracksalesorder.Master"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" >
	<html:style>
      
      .myFont {         
         font-weight : bold
      }
      
	 .sapMObjLAttrRow .sapMObjStatus {
		overflow: hidden;
		white-space: normal;
		text-overflow: ellipsis;
		width: 100%;
     }
	.myStatusFont{
	font-size: 0.9rem;
	}
	.myCustFont{
	font-style: italic;
	}
      
   </html:style>
	<Page
		title="{i18n>MasterTitle}" >	
		<customHeader>
			<Bar>
			<contentMiddle>
				<Text class = "myFont" text="{i18n>MasterTitle}"  />
			</contentMiddle>
			</Bar>
			</customHeader>
		<subHeader>
			<Bar>
				<contentLeft>
					<SearchField
						search="handleSearch"
						>
					</SearchField>
				</contentLeft>	
				</Bar>
				</subHeader>
		
		<List
			id="list"	
			mode="{device>/listMode}"
			select="handleListSelect"	
			growing="true"
			growingThreshold="100"
			items="{
		      path: '/results'		      
		    }"				
			>
			<ObjectListItem				
				type="{device>/listItemType}"
				press="handleListItemPress"
				title="{SOrd}"
				number="{ElapsedDays}"
				numberUnit="days"
				icon="{ path:'InSD', formatter:'com.sndk.poc.util.Formatter.Iconchange' }" >
				
				
				<attributes>
					<ObjectAttribute id="customerName" class= "myCustFont" text="{EndCustomer}" />
				</attributes>
				<firstStatus>
					<ObjectStatus class="myStatusFont"
						text="{
						path: 'HeaderStatus',
						formatter:
						'com.sndk.poc.util.Formatter.statusText'
						}"
						state ="{
						path: 'HeaderStatus',
						formatter:
						'com.sndk.poc.util.Formatter.statusState'
						}" />

				</firstStatus>
				<secondStatus>
					<ObjectStatus 
								icon="{ path: 'ExcepFlg', formatter: 'com.sndk.poc.util.Formatter.Iconexception' }" /> 
				</secondStatus>
			</ObjectListItem>	
				
		</List>
		<footer>
			<Bar>		
				<contentRight>
				
					   <Button icon="sap-icon://sort"
						     text=""
						     press="handleSortBy" />	
						 <Button icon="sap-icon://filter"
						     text=""
						     press="handleFilterBy" />	
						
					 <Button icon="sap-icon://calendar"
						     text=""
						     press="handlePopoverPress" />					
				</contentRight>	
						
			</Bar>
		</footer>
		
	</Page>
</core:View>